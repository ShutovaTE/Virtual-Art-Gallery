@model Virtual_Art_Gallery.Models.ArtworkModel

<h1>Delete Artwork</h1>

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this artwork?</h4>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Category:</strong> @Model.Category.Name</p>
    @* <p><strong>Created on:</strong> @Model.DateCreated</p> *@
    <div>
        <h4>Image:</h4>
        <img src="@Model.ImagePath" alt="Artwork Image" style="width: 200px;" />
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
