@model Virtual_Art_Gallery.Models.ArtworkModel

@{
    ViewData["Title"] = "Delete Artwork";
}

<h1>Delete Artwork</h1>

<h3>Are you sure you want to delete this artwork?</h3>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Category:</strong> @Model.Category.Name</p>
    <p><strong>Creator:</strong> @Model.Creator.UserName</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form asp-action="AdminDeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a href="@Url.Action("AllArtworks")" class="btn btn-secondary">Cancel</a>
</form>
