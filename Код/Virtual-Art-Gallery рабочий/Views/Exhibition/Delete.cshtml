@model Virtual_Art_Gallery.Models.ExhibitionModel

@{
    ViewData["Title"] = "Удаление выставки";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить выставку?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Открытость
        </dt>
        <dd class="col-sm-10">
            @(Model.IsClosed ? "Приватна" : "Открыта")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> 
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Отмена</a>
    </form>
</div>
